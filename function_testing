from cmu_graphics import *

circleRadius = 10
rectLeftX = 10
rectTopY = 10
rectWidth = 10
rectHeight = 10
shapeCorners = [rectLeftX, rectTopY - circleRadius, rectLeftX + rectWidth, rectTopY - circleRadius,
                    rectLeftX + rectWidth + circleRadius, rectTopY, 
                    rectLeftX + rectWidth + circleRadius, rectTopY + rectHeight,
                    rectLeftX + rectWidth, rectTopY + rectHeight + circleRadius,
                    rectLeftX, rectTopY + rectHeight + circleRadius,
                    rectLeftX - circleRadius, rectTopY + rectHeight,
                    rectLeftX - circleRadius, rectTopY]
def redrawAll(app):
    drawPolygon(shapeCorners[0], shapeCorners[1], shapeCorners[2], shapeCorners[3], shapeCorners[4],
                shapeCorners[5], shapeCorners[6], shapeCorners[7], shapeCorners[8], shapeCorners[9],
                shapeCorners[10], shapeCorners[11], shapeCorners[12], shapeCorners[13], shapeCorners[14], shapeCorners[15])
    drawRect(rectLeftX, rectTopY, rectWidth, rectHeight, fill = 'red')
runApp()